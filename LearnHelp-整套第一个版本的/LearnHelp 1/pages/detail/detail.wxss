/* pages/detail/detail.wxss */
page{
	width: 100%;
	height: 100%;
}
#detail{
	width:90%;
	margin:auto;
	margin-top: 40rpx;
	color:#888;
}
#detail .box{
	width: 100%;
	margin-top: 20rpx;
}
#detail view .text{
	width:30%;
	text-align:left;
	background: #fff;
	display: inline-block;
}
#detail view .value{
	width:65%;
	background: #fafafa;
	border-radius: 5px;
	display: inline-block;
	box-shadow: 0px 0px 1px 1px #eee;
	padding: 4rpx;
	color:#333;
	font-size: 37rpx;
}
#detail .box .value{
	padding-left: 10rpx;
	border-radius: 0;
	background: #fff;
	box-shadow: 0px 0px 0px 0px #fff;
	border-bottom: 1px solid #f1f1f1;
	font-weight: 300;
}
#detail .run-image{
	display: flex;
	align-items: center;
	margin-top: 30rpx;
	font-size: 35rpx;
	border-bottom: 1px solid #aaa;
}
#detail  .run-image .doc-info{
  width: 100%;
  height:100%;
}
#detail  .run-image  .doc-info image {
	width: 100%;
  height:100%;
  display:block;
}
#detail  .run-image  .doc-info  .detail{
  height:100%;
	width: 50%;
  display:block;
}
#detail .run-image  .doc-info  .detail .text{
  height:100%;
	width: 50%;
  display:inline-block;
}
#detail .run-image  .doc-info  .detail .value{
  height:100%;
	width: 50%;
  display:inline-block;
}