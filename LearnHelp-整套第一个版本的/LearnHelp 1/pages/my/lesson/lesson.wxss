/* pages/my/lesson/lesson.wxss */
page{
	width: 100%;
	height: 100%;
	background: #fff;
}
.form-box{
	margin-top: 40rpx;
}
form{
	width: 100%;
}
.form .line-box{
	width: 95%;
	height: 100rpx;
	display: flex;
	margin: auto;
	align-items: center;
	border-bottom: 1px solid #fafafa;
	position: relative;
}
.form .line-box .title{
	width: 25%;
	font-size: 35rpx;
}
.form .line-box input{
	background: #fff;
	font-size: 35rpx;
	color: #888;
	font-weight: lighter;
	width: 120%;
}
.form .line-box .image-box{
	width: 5%;
	height: 35rpx;
	position: relative;
	bottom: 10rpx;
	margin-left: 10rpx;
	margin-right: 15rpx;
}
.form .line-box .image-box image{
	width: 100%;
	height: 100%;
}

.form .line-box .text-box{
	position: relative;
}
.form .line-box .text-box scroll-view{
	position: absolute;
	top: 100%;
	width: 100%;
	height: 200rpx;
	border: 1px solid #ddd;
	box-shadow: 0px 0px 1px 1px #f5f5f5;
	background: #fff;
	z-index: 100;
}
.form .line-box .item{
	border: 1px solid #fafafa;
	font-size: 32rpx;
	font-weight: lighter;
}

.form button::after{
	border: none;
}
.form button{
	border-radius: 0;
	background: #007cfd;
	width: 95%;
	height: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 35rpx;
	font-weight: lighter;
	margin-top: 40rpx;
}
.form .button-hover{
	background: #118dfd;
} 